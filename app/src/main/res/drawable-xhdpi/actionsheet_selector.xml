        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="#479de2" android:dashGap="0dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="#dddddd" android:dashGap="0dp" />
        </shape>
    </item>
</selector>