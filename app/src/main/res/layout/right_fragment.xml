<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="253dp">

    <!--
    android:hint="以字母开头,长度在6~18之间,只能包含字母、数字和下划线"-->
    <!--<include layout="@layout/divider_settings" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:minHeight="45dp"
        android:orientation="horizontal">

        <TextView
            style="@style/Account.TextView"
            android:text="手机号" />

        <EditText
            android:id="@+id/et_regist_username"
            style="@style/Account.EditText"
            android:layout_weight="1"
            android:hint="请输入您的手机号" />

        <Button
            android:id="@+id/account_register_get_code_btn"
            style="?android:borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_nomal_yellow"
            android:padding="5dp"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <include layout="@layout/divider_settings" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:minHeight="45dp"
        android:orientation="horizontal">

        <TextView
            style="@style/Account.TextView"
            android:text="验证码" />

        <EditText
            android:id="@+id/et_regist_pwd"
            style="@style/Account.EditText"
            android:hint="输入验证码"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:singleLine="true" />
    </LinearLayout>

    <include layout="@layout/divider_settings" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:minHeight="45dp"
        android:orientation="horizontal">

        <TextView
            style="@style/Account.TextView"
            android:text="密码" />

        <EditText
            android:id="@+id/account_register_code_et"
            style="@style/Account.EditText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="请至少输入6位有效数字"
            android:singleLine="true" />


        <ImageButton
            android:id="@+id/rigst_show_pwd"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/pwd_no"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

    <include layout="@layout/divider" />

    <include layout="@layout/divider_thick" />

    <include layout="@layout/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:minHeight="45dp"
        android:orientation="horizontal">
        <!-- android:drawableLeft="@drawable/checkbox_bg_selector"
                    android:button="@null"
        -->
        <CheckBox
            android:id="@+id/checkBoxOfUserProtocol"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:checked="true"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="同意用户使用协议"
            android:textColor="@color/yr_text_light"
            android:textSize="15sp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/account_regist_xieyi"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="right|center_vertical"
            android:background="@null"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="15dp"
            android:src="@drawable/icon_arrow_right" />
    </LinearLayout>

    <Button
        android:id="@+id/btnRegister"
        style="?android:buttonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_margin="25dp"
        android:background="@drawable/btn_bg"
        android:minHeight="50dp"
        android:text="立即注册"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>