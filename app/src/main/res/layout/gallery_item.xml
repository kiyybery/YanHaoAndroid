<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="15dp">

    <TextView
        android:id="@+id/id_index_gallery_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:text="周一"
        android:textColor="@color/text_selector" />

    <TextView
        android:id="@+id/id_index_gallery_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_index_gallery_item_image"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="2015-11-15"
        android:textColor="@color/text_selector"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/image_bottom"
        android:layout_width="35dp"
        android:layout_height="2dp"
        android:layout_below="@+id/id_index_gallery_item_text"
        android:layout_marginLeft="23dp"
        android:background="@android:color/holo_blue_light"
        android:visibility="visible"

        />

</RelativeLayout>