<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/item_layout"
        android:layout_width="fill_parent"
        android:layout_height="120dp">

        <com.yanhao.main.yanhaoandroid.util.CircleImageView
            android:id="@+id/cv_order_avatar"
            style="@style/commonAvatar"
            android:layout_gravity="left|top"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:id="@+id/content_re_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cv_order_avatar">

            <TextView
                android:id="@+id/order_name"
                style="@style/Snapchat.Detail.Comment.Item2"
                android:paddingTop="25dp"
                android:text="张晓梅"
                android:textColor="#333333"/>

            <ImageView
                android:id="@+id/order_level"
                style="@style/Snapchat.Detail.Comment.Item2"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="18dp"
                android:layout_toRightOf="@+id/order_name"
                android:paddingTop="13dp"
                android:src="@drawable/erji_icon"
                android:layout_height="25dp"
                android:layout_width="25dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/area_rl_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content_re_layout"
            android:layout_toRightOf="@+id/cv_order_avatar">

            <TextView
                android:id="@+id/order_area_tv"
                style="@style/Snapchat.Detail.Comment.Item2"
                android:paddingTop="10dp"
                android:text="擅长 精神病 亲子关系 婚姻问题"
                android:textColor="#969696"/>
            <TextView
                android:id="@+id/order_date_tv"
                style="@style/Snapchat.Detail.Comment.Item2"
                android:paddingTop="5dp"
                android:text="2015年12月12日"
                android:layout_below="@+id/order_area_tv"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:textColor="#969696"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>