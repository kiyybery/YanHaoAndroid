<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/divider_thick"/>
    <RelativeLayout
        android:id="@+id/item_collection_layout"
        android:layout_width="fill_parent"
        android:layout_height="115dp"
        android:layout_marginLeft="15dp">

        <ImageView
            android:id="@+id/img_collection"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:background="@drawable/focus_show"
            android:layout_alignTop="@+id/title_tv"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/img_collection"
            android:text="心理学家是如何谈论冥想的？"
            android:textSize="18dp"
            android:textColor="#666666"/>

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_collection"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textSize="17dp"
            android:text="2015年12月23日"
            android:textColor="#969696"/>
    </RelativeLayout>
</LinearLayout>