<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/divider_px_thick" />

    <RelativeLayout
        android:id="@+id/item_test_layout"
        android:layout_width="fill_parent"
        android:layout_height="230px"
        android:layout_marginLeft="34px"
        android:background="@drawable/myprofire_pressed">

        <ImageView
            android:id="@+id/img_test"
            android:layout_width="240px"
            android:layout_height="180px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/focus_show" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_test"
            android:layout_marginLeft="30px"
            android:layout_toEndOf="@+id/img_test"
            android:layout_toRightOf="@+id/img_test"
            android:maxEms="7"
            android:singleLine="true"
            android:text="测试题标题测试题标题测试题标题测试题标题"
            android:textColor="#666666"
            android:textSize="32px" />


        <ImageView
            android:id="@+id/tag_iv"
            android:layout_width="50px"
            android:layout_height="25px"
            android:layout_alignTop="@+id/title_tv"
            android:layout_toEndOf="@+id/title_tv"
            android:layout_toRightOf="@+id/title_tv"
            android:layout_marginTop="10px"
             />

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_test"
            android:layout_alignLeft="@+id/title_tv"
            android:layout_alignStart="@+id/title_tv"
            android:text="已答题人数："
            android:textColor="#969696"
            android:textSize="26px" />

        <TextView
            android:id="@+id/answer_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/time_tv"
            android:layout_toEndOf="@+id/time_tv"
            android:layout_toRightOf="@+id/time_tv"
            android:text="4452"
            android:textSize="26px" />
    </RelativeLayout>

</LinearLayout>