<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100px"
    android:id="@+id/li_profire_title"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_profire_title"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@drawable/common_title_bg" >
        <LinearLayout
            android:id="@+id/ll_profire_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingTop="15px"
            android:paddingBottom="15px"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/iv_profire_title_back"
                android:layout_width="26px"
                android:layout_height="40px"
                android:background="@drawable/common_left_btn_return" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_profire_title_title"
            android:layout_width="wrap_content"
            style="@style/A1_Font"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="标题"
            android:maxEms="9"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="40px" />
        <LinearLayout
            android:id="@+id/ll_profire_title_right"
            android:layout_width="wrap_content"
            android:layout_height="70px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="30px"
            android:paddingTop="15px"
            android:paddingBottom="15px"
            android:visibility="visible"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_profire_title_right"
                android:layout_width="113px"
                android:layout_height="50px"
                android:text="完成"
                android:textSize="30px"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
