<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/section_px_title" />

    <include layout="@layout/divider_px_thick" />

    <RelativeLayout
        android:id="@+id/order_name_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_avatar_tv"
        android:background="@color/yr_background_main">

        <TextView
            android:id="@+id/order_name_tv"
            style="@style/MyProfile.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="订单名称"
            android:textColor="#333333"
            android:textSize="38px" />

        <TextView
            android:id="@+id/order_name_time"
            style="@style/MyProfile.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15px"
            android:text="预约咨询师"
            android:textColor="#666666"
            android:textSize="32px" />
    </RelativeLayout>

    <include layout="@layout/divider_settings" />

    <RelativeLayout
        android:id="@+id/order_cash_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_avatar_tv"
        android:background="@color/yr_background_main">

        <TextView
            android:id="@+id/order_cash_tv"
            style="@style/MyProfile.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="订单金额"
            android:textColor="#333333"
            android:textSize="38px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/order_cash_time"
            android:layout_toStartOf="@+id/order_cash_time"
            android:text="￥"
            android:textSize="32px" />

        <TextView
            android:id="@+id/order_cash_time"
            style="@style/MyProfile.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15px"
            android:text="500"
            android:textColor="#666666"
            android:textSize="32px" />
    </RelativeLayout>

    <include layout="@layout/divider_px_thick" />

    <RelativeLayout
        android:id="@+id/need_to_pay_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_avatar_tv"
        android:background="@color/yr_background_main">

        <TextView
            android:id="@+id/need_to_pay_tv"
            style="@style/MyProfile.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="还需支付"
            android:textColor="#333333"
            android:textSize="38px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/need_to_pay_time"
            android:layout_toStartOf="@+id/need_to_pay_time"
            android:text="￥"
            android:textColor="#479de2"
            android:textSize="32px" />

        <TextView
            android:id="@+id/need_to_pay_time"
            style="@style/MyProfile.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15px"
            android:text="500"
            android:textColor="#479de2"
            android:textSize="32px" />
    </RelativeLayout>

    <include layout="@layout/divider_settings" />

    <RelativeLayout
        android:id="@+id/wechat_pay_layout"
        android:layout_width="fill_parent"
        android:layout_height="136px"
        android:layout_below="@+id/edit_avatar_tv"
        android:background="@color/yr_background_main">

        <ImageView
            android:id="@+id/wechat_pay_iv"
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="35px"
            android:paddingBottom="10px"
            android:paddingTop="10px"
            android:src="@drawable/zhifu_weixin_icon" />

        <ImageView
            android:id="@+id/wechat_pay_iv_check"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="35px"
            android:src="@drawable/zhifu_checked" />

    </RelativeLayout>

    <include layout="@layout/divider_settings" />

    <RelativeLayout
        android:id="@+id/alipay_pay_layout"
        android:layout_width="match_parent"
        android:layout_height="136px"
        android:layout_below="@+id/edit_avatar_tv"
        android:background="@color/yr_background_main">

        <ImageView
            android:id="@+id/alipay_pay_iv"
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="35px"
            android:paddingBottom="10px"
            android:paddingTop="10px"
            android:src="@drawable/zhifubao_icon" />

        <ImageView
            android:id="@+id/alipay_pay_iv_check"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="35px"
            android:src="@drawable/zhifu_check" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnpay"
        style="?android:buttonStyle"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_margin="25dp"
        android:background="@drawable/btn_bg"
        android:minHeight="50dp"
        android:text="立即支付"
        android:textColor="@color/white"
        android:textSize="38px" />
</LinearLayout>