<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/li_home_title"
    android:layout_width="match_parent"
    android:layout_height="120px"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_home_title"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="#f2f2f2">

        <LinearLayout
            android:id="@+id/ll_home_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="15px"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingTop="25px">

            <TextView
                android:id="@+id/tv_home_title_left"
                android:layout_width="80px"
                android:layout_height="60px"
                android:textSize="36px"
                android:textColor="#ffffff"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_home_title_title"
            style="@style/A1_Font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:maxEms="9"
            android:singleLine="true"
            android:text="标题"
            android:textSize="44px"
            android:textColor="#ffffff"/>

        <LinearLayout
            android:id="@+id/ll_home_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:paddingBottom="15px"
            android:paddingLeft="30px"
            android:paddingRight="15px"
            android:paddingTop="15px"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_home_title_right"
                android:layout_width="113px"
                android:layout_height="53px" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
