<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/myprofire_pressed">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <com.yanhao.main.yanhaoandroid.util.CircleImageView
            android:id="@+id/cv_comment_avatar"
            style="@style/commonAvatar"
            android:layout_gravity="left|top" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/consultant_name_match"
                    style="@style/Snapchat.Detail.Comment.Item2"
                    android:paddingTop="13dp"
                    android:text="张晓梅" />

                <ImageView
                    android:id="@+id/consult_level_match"
                    style="@style/Snapchat.Detail.Comment.Item3"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@+id/consultant_name_match"
                    android:src="@drawable/level_icon_erji" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/consult_area_tv"
                    style="@style/Snapchat.Detail.Comment.Item3"
                    android:layout_marginTop="10dp"
                    android:text="擅长 "
                    android:textColor="#333333"
                    />

                <TextView
                    android:id="@+id/consult_area"
                    style="@style/Snapchat.Detail.Comment.Item3"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@+id/consult_area_tv"
                    android:maxEms="13"
                    android:singleLine="true"
                    android:text="亲子关系 婚姻家庭 亲子关系" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/login_show_pwd"
        android:layout_width="10dp"
        android:layout_height="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/arrow_right" />


</RelativeLayout>