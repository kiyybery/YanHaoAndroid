<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/divider_px_thick" />

    <RelativeLayout
        android:id="@+id/recommend_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <LinearLayout
            android:id="@+id/pic_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/recommend_item_pic"
                android:layout_width="fill_parent"
                android:layout_height="288px"
                android:scaleType="fitXY"
                android:src="@drawable/title_pic" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pic_layout"
            android:layout_marginLeft="35px"
            android:layout_marginTop="15px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/subname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张华画"
                android:textColor="#333333"
                android:textSize="38px" />

            <ImageView
                android:id="@+id/level_pic"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_marginLeft="15px"
                android:layout_toRightOf="@+id/subname"
                android:src="@drawable/erji_icon" />

            <ImageView
                android:id="@+id/dingwei_iv"
                android:layout_width="26px"
                android:layout_height="26px"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/distence_tv"
                android:layout_toStartOf="@+id/distence_tv"
                android:src="@drawable/zixusnhi_dingwei" />

            <TextView
                android:id="@+id/distence_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="35px"
                android:text="呼和浩特"
                android:textColor="#999999"
                android:textSize="26px" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/describe_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info_layout"
            android:layout_marginLeft="35px">

            <TextView
                android:id="@+id/describe_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15px"
                android:layout_marginRight="35px"
                android:ellipsize="end"
                android:maxLines="3"
                android:singleLine="false"
                android:text="@string/myprofire_content"
                android:textColor="#666666"
                android:textSize="34px" />

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>