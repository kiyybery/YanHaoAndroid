<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/li_text_title"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_text_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/common_title_bg">

        <LinearLayout
            android:id="@+id/ll_text_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="15px"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingTop="15px">

            <ImageView
                android:id="@+id/iv_text_title_back"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:background="@drawable/common_left_btn_return" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_text_title_title"
            style="@style/A1_Font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:maxEms="9"
            android:singleLine="true"
            android:text="标题"
            android:textSize="22dp" />

        <LinearLayout
            android:id="@+id/ll_text_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:paddingBottom="15px"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingTop="15px"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_text_title_right"
                android:layout_width="113px"
                android:layout_height="40px"
                android:text="完成"
                android:textSize="18dp"
                android:textColor="#333333"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
