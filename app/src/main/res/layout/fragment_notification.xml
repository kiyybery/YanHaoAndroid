<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/section_px_title" />

    <include layout="@layout/divider_px_thick" />

    <RelativeLayout
        android:id="@+id/profire_layout"
        android:layout_width="fill_parent"
        android:layout_height="120px"
        android:background="@color/yr_background_main">

        <TextView
            android:id="@+id/edit_profire_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:text="接收通知推送"
            android:textSize="38px"
            android:textColor="#333333" />

        <com.yanhao.main.yanhaoandroid.util.SwitchView
            android:id="@+id/view_switch1"
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="17px"
            android:layout_marginRight="17px" />
    </RelativeLayout>
</LinearLayout>